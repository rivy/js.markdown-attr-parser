{
  "name": "markdown-attr-parser",
  "version": "1.3.0",
  "description": "A parser for markdown entity attributes",
  "main": "dist/index.js",
  "scripts": {
    "build:parser": "pegjs --optimize size src/parser.pegjs",
    "coverage": "nyc report --reporter=text-lcov | codecov --disable=gcov --pipe",
    "pretest:spell": "cspell --no-summary src/**/*.js --exclude parser.js",
    "pretest:style": "xo --ignore src/parser.js",
    "pretest": "npm run build:parser && npm run pretest:spell && npm run pretest:style",
    "prepare": "del-cli dist && npm run build:parser && cross-env BABEL_ENV=production babel src --out-dir dist",
    "test": "nyc --silent ava"
  },
  "repository": "github:rivy/markdown-attr-parser",
  "keywords": [
    "markdown",
    "attribute",
    "plugin"
  ],
  "author": "Roy Ivy III <rivy.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rivy/js.markdown-attr-parser/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "ava": "^2.4.0",
    "codecov": "^3.6.1",
    "cross-env": "^6.0.0",
    "cspell": "^4.0.30",
    "del-cli": "^3.0.0",
    "nyc": "^14.1.1",
    "pegjs": "^0.8.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "space": true,
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-var": "warn",
      "object-shorthand": "warn"
    }
  }
}
