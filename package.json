{
  "name": "markdown-attr-parser",
  "version": "1.3.0",
  "description": "A parser for markdown entity attributes",
  "main": "dist/index.js",
  "scripts": {
    "build": "exec-if-updated --source package.json --source webpack.config.js --source src/** --target dist/** npm run build:do",
    "build:do": "webpack && run-s build:coverage-hack",
    "build:coverage-hack": "node node_modules/replace-in-files-cli/cli.js --regex \"\\s+{\\s*//\\s*webpackBootstrap\\s*\" --replacement \" /* istanbul ignore next */ {\\n\" dist/index.js",
    "clean": "del-cli dist",
    "coverage": "nyc report --reporter=text-lcov | codecov --disable=gcov --pipe",
    "coverage:local": "nyc report --reporter=html",
    "lint": "run-p lint:*",
    "lint:spell": "cspell --no-summary src/**/*.js README.*",
    "lint:style": "xo",
    "pretest": "run-s build lint",
    "prepublishOnly": "run-s rebuild test",
    "prepublishOnly:changelog": "git-chglog > CHANGELOG.mkd",
    "prepublishOnly:lock": "npm install --package-lock-only && mkdirp lock && move-file package-lock.json lock",
    "prepublishOnly:minify": "terser --compress --mangle -- dist/index.js > dist/index.min.js",
    "rebuild": "run-s clean build",
    "test": "nyc --silent ava"
  },
  "repository": "github:rivy/markdown-attr-parser",
  "keywords": [
    "markdown",
    "attribute",
    "plugin"
  ],
  "author": "Roy Ivy III <rivy.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rivy/js.markdown-attr-parser/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "ava": "^2.4.0",
    "codecov": "^3.6.1",
    "cspell": "^4.0.30",
    "del-cli": "^3.0.0",
    "exec-if-updated": "^1.1.1",
    "mkdirp": "^0.5.1",
    "move-file-cli": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "pegjs": "^0.10.0",
    "pegjs-loader": "^0.5.5",
    "replace-in-files-cli": "git://github.com/rivy/js.replace-in-files-cli.git",
    "terser": "^4.3.8",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "xo": "^0.24.0"
  },
  "xo": {
    "space": true,
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-var": "warn",
      "object-shorthand": "warn",
      "capitalized-comments": 0
    }
  }
}
